<% @questions.each do |q| %>
  <%= form_for(@answer, remote: true) do |f| %>
    <% if @answer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

        <ul>
        <% @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="hide">

  <p><%= q.value %></p>
    <div class="field">
      <%= f.label :value %><br>
      <%= f.text_area :value %>
    </div>
    <div class="field">
      <%= f.hidden_field :question_id, :value => q.id %>
      <%= form_tag do %>
       <% @questions.each do |q| %>
         <%= text_field_tag "answer[#{q.id}]" %>
      <% end %>
    </div>

  </div>

<% end %>




<% end %>


<% end %>
<%= submit_tag "Submit my answers" %>
