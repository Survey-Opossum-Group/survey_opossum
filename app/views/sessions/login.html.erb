<div class="form">

<%= form_tag do %>
  <%= label_tag :email, "Email:", class: "label" %>
  <%= text_field_tag :email, "", placeholder: "email@email.com" %>

  <%= label_tag :password, "Password:", class: "label"  %>
  <%= password_field_tag :password, "", placeholder: "**********" %>

  <%= submit_tag "Login", class: "loginButton", id: "loginButton" %>
<% end %>

</div>
<div style="clear:both;"></div>


<div class="login-bottom-bar">
  New User?   <%= link_to "Sign Up!", new_author_path %>

