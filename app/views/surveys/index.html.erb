
<h1>Listing Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Publish</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author.surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.author_id %></td>
        <td><%= if survey.publish == true
                link_to 'YES', survey
                else
                p "NO"
                end
                %></td>
        <td><%= survey.description %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
